using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Escreva um número qualquer: ");
			double numero = double.Parse(Console.ReadLine());
			
			double resto = numero % 2 ;
			Console.WriteLine("O resto da divisão desse número por 2 é: " + resto);
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
