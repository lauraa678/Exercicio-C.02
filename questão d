using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Digite um número qualquer: ");
			float numero = float.Parse(Console.ReadLine());
			
			float quadrado = numero * numero;
			Console.WriteLine("O quadrado desse número é: " + quadrado);
			Console.WriteLine("");
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
