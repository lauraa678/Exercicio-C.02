using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.WriteLine("Escreva um número qualquer: ");
			float numero = float.Parse(Console.ReadLine());
			
			float metade = numero / 2;
			Console.WriteLine("A metade do número que você digitou é: " + metade);
			
			Console.WriteLine("");
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
